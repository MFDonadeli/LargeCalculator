<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnClear"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/clear"
            android:layout_weight="1"
            style="@style/operation_button_style"
            />
        <Button
            android:id="@+id/btnExp"
            android:onClick="clickOperation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/operation_button_style"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btnDiv"
            android:onClick="clickOperation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/division"
            android:layout_weight="1"
            style="@style/operation_button_style"/>
        <ImageButton
            android:id="@+id/btnErase"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_input_delete"
            android:layout_weight="1"
            android:contentDescription="@string/erase_desc"
            style="@style/operation_button_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn7"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_7"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btn8"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_8"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btn9"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_9"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btnMult"
            android:onClick="clickOperation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/multiplication"
            android:layout_weight="1"
            style="@style/operation_button_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn4"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_4"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btn5"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_5"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btn6"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_6"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btnMinus"
            android:onClick="clickOperation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/subtraction"
            android:layout_weight="1"
            style="@style/operation_button_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn1"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_1"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btn2"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_2"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btn3"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_3"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btnPlus"
            android:onClick="clickOperation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/addition"
            android:layout_weight="1"
            style="@style/operation_button_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn0"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/digit_0"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btnDot"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dot"
            android:layout_weight="1"
            style="@style/digit_button_style"/>
        <Button
            android:id="@+id/btnMod"
            android:onClick="clickNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mod"
            android:layout_weight="1"
            style="@style/operation_button_style"/>
        <Button
            android:id="@+id/btnEquals"
            android:onClick="clickOperation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/equals"
            android:layout_weight="1"
            style="@style/result_button_style"/>
    </LinearLayout>

</LinearLayout>